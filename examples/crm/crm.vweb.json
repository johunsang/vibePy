        "fields": {
          "name": "text",
          "amount": "float",
          "stage": "text",
          "owner": "text",
          "close_date": "datetime",
          "created_at": "datetime"
        }
      },
      {
        "name": "Activity",
        "fields": {
          "type": "text",
          "summary": "text",
          "due_at": "datetime",
          "status": "text",
          "created_at": "datetime"
        }
      }
    ]
  },
  "api": {
