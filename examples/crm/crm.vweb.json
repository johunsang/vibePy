{
  "name": "VibeCRM",
  "db": {
    "path": "crm.db",
    "models": [
      {
        "name": "Account",
        "fields": {
          "name": "text",
          "industry": "text",
          "stage": "text",
          "active": "bool",
          "created_at": "datetime"
        }
      },
      {
        "name": "Contact",
        "fields": {
          "first_name": "text",
          "last_name": "text",
          "email": "text",
          "phone": "text",
          "title": "text",
          "created_at": "datetime"
        }
      },
      {
