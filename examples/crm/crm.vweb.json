    "pages": [
      {"path": "/accounts", "model": "Account", "title": "Accounts"},
      {"path": "/contacts", "model": "Contact", "title": "Contacts"},
      {"path": "/deals", "model": "Deal", "title": "Deals"},
      {"path": "/activities", "model": "Activity", "title": "Activities"}
